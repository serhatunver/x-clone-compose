{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "allowArbitraryExtensions": true,
    "verbatimModuleSyntax": true,
    "sourceMap": false
  },
  "include": ["src/swagger-output.json", "src/**/*"],
  "exclude": ["node_modules"],
  // "typeRoots": ["node_modules/@types"],
  // "types": ["node", "express"],
  // "lib": ["es2022"],
  // "typeRoots": ["./src/types"],
  // "files": ["./src/types/types.d.ts"],
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "$schema": "https://json.schemastore.org/tsconfig",
      "display": "Node LTS",
      "_version": "20.1.0",
      "compilerOptions": {
        "lib": ["es2023"],
        "module": "node16",
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node16"
      }
    }
  }
}
